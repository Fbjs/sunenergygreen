---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
//import heroImage from "@images/solar-panel.svg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Contáctanos en WhatsApp"
    url="https://wa.me/1234567890"  
  />

  <HeroSection
    title=`No Dejes que el Alza de la Luz te Afecte - <span
        class="text-green-500 dark:text-green-400">SunEnergyGreen</span> es la Solución`
    subTitle="¿Las tarifas eléctricas suben? ¡Tus costos no tienen por qué! Instala energía solar con SunEnergyGreen y empieza a ahorrar desde el primer día. Soluciones personalizadas y financiamiento flexible para que protejas tu bolsillo."
    primaryBtn="Empieza a Ahorrar"
    primaryBtnURL="/comenzar"
    secondaryBtn="Asesórate Gratis"
    secondaryBtnURL="https://wa.me/1234567890"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">5.0</span> / 5`
    starCount={5}
    reviews=`Miles ya eligen SunEnergyGreen`
    alt="Paneles solares SunEnergyGreen en un hogar chileno"
  />


  <ClientsSection
    title="Hogares que Confían en SunEnergyGreen"
    subTitle="Cientos de familias chilenas ya están ahorrando en sus cuentas de luz con nuestras soluciones solares. ¿Estás listo para unirte a ellos?"
  />


  <FeaturesGeneral
    title="Soluciones Energéticas para el Futuro"
    subTitle="En SunEnergyGreen, abordamos los desafíos actuales del suministro energético con soluciones solares innovadoras y adaptadas a tus necesidades. Desde la instalación hasta el mantenimiento, estamos comprometidos a ayudarte a reducir costos y mejorar tu calidad de vida."
    alt="Productos solares de SunEnergyGreen"
    features={features}
  />


  <FeaturesNavs
    title=`Personaliza las <span class="text-green-500 dark:text-green-400">Soluciones SunEnergyGreen</span> para tu Hogar.`
    tabs={[
      {
        heading: "Tecnología de Vanguardia",
        content:
          "Potencia tu hogar con la última tecnología solar de SunEnergyGreen. Disfruta de mayor eficiencia energética y reduce tus costos con nuestras soluciones avanzadas.",
        svg: "solar-panel",
        src: tools,
        alt: "Paneles solares de última generación",
        first: true,
      },
      {
        heading: "Monitoreo Intuitivo",
        content:
          "Controla y optimiza el rendimiento de tu sistema solar con nuestros paneles de control intuitivos, diseñados para una gestión energética eficiente.",
        svg: "dashboard",
        src: dashboard,
        alt: "Interfaz de monitoreo solar intuitiva",
        second: true,
      },
      {
        heading: "Características Robustas",
        content:
          "Simplifica el manejo de tu energía y maximiza tu ahorro con las funciones robustas de SunEnergyGreen, diseñadas para durar y ofrecer resultados excepcionales.",
        svg: "shield",
        src: construction,
        alt: "Sistema solar robusto y duradero",
      },
    ]}
  />


  <TestimonialsSection
    title="Acelera tu Ahorro Energético"
    subTitle="En SunEnergyGreen, facilitamos tu transición a la energía solar con una instalación rápida y sin complicaciones. Vive la experiencia de ahorro desde el primer día."
    testimonials={[
      {
        content:
          "SunEnergyGreen transformó nuestro hogar. La instalación fue rápida y profesional, y los ahorros en nuestra factura de electricidad son impresionantes. ¡Altamente recomendados!",
        author: "Javier Pérez",
        role: "Propietario de Vivienda",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "300+",
        description:
          "hogares en Chile ya disfrutan de energía solar con SunEnergyGreen",
      },
      {
        count: "25%",
        description:
          "promedio de reducción en las facturas de electricidad",
      },
      {
        count: "100%",
        description:
          "satisfacción de nuestros clientes con nuestras soluciones solares",
      },
      {
        count: "5 días",
        description: "tiempo promedio de instalación completa",
      },
    ]}
  />


  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="Preguntas<br />Frecuentes" faqs={faqs} />


  <HeroSectionAlt
    title="Construyamos Juntos"
    subTitle="SunEnergyGreen es la solución definitiva para energía solar, cuidadosamente diseñada para tu hogar."
    url="https://wa.me/1234567890"  
  />

</MainLayout>
